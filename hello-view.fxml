z<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.dianagame.HelloController">
    <!-- Верхняя часть -->
    <top>
        <VBox alignment="CENTER" spacing="10">
            <Label fx:id="wordLabel" text="_____" style="-fx-font-size: 36px; -fx-font-family: 'Arial'; -fx-text-fill: #4CAF50;" />
            <Label fx:id="attemptsLabel" text="Осталось попыток: 6" style="-fx-font-size: 20px; -fx-text-fill: #FF0000;" />
        </VBox>
    </top>
    <!-- Центральная часть -->
    <center>
        <Canvas fx:id="hangmanCanvas" width="300" height="300" style="-fx-background-color: #f4f4f4;" />
    </center>
    <!-- Нижняя часть -->
    <bottom>
        <VBox alignment="CENTER" spacing="10">
            <TextField fx:id="inputField" promptText="Введите букву" style="-fx-font-size: 20px;" />
            <Button text="Угадать" onAction="#onGuess" style="-fx-font-size: 18px; -fx-padding: 10px 20px;" />
        </VBox>
    </bottom>
</BorderPane>
